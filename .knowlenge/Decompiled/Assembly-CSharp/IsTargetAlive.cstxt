using Rust.Ai;

public class IsTargetAlive : BaseScorer
{
	public override float GetScore(BaseContext ctx)
	{
		if (ctx is NPCHumanContext c)
		{
			return (!Test(c)) ? 0f : 1f;
		}
		return 0f;
	}

	public static bool Test(NPCHumanContext c)
	{
		return c.Human.AttackTarget != null && !c.Human.AttackTarget.IsDestroyed && ((c.EnemyPlayer != null && !c.EnemyPlayer.IsDead()) || (c.EnemyNpc != null && !c.EnemyNpc.IsDead())) && (c.Human.AttackTarget.ServerPosition - c.Human.ServerPosition).sqrMagnitude < c.Human.Stats.DeaggroRange * c.Human.Stats.DeaggroRange;
	}
}
