using Apex.AI;

public class CanUseWeaponAtCurrentRange : ContextualScorerBase<ScientistContext>
{
	public override float Score(ScientistContext c)
	{
		if (!Try(c))
		{
			return 0f;
		}
		return score;
	}

	public static bool Try(ScientistContext c)
	{
		AttackEntity firearm = c.Domain.GetFirearm();
		if (firearm == null)
		{
			return false;
		}
		return (EnemyRange)c.GetFact(Facts.EnemyRange) switch
		{
			EnemyRange.LongRange => firearm.CanUseAtLongRange, 
			EnemyRange.MediumRange => firearm.CanUseAtMediumRange, 
			EnemyRange.OutOfRange => firearm.CanUseAtLongRange, 
			_ => true, 
		};
	}
}
