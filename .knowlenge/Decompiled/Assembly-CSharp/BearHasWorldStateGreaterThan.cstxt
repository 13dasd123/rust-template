using Apex.AI;
using Apex.Serialization;

public class BearHasWorldStateGreaterThan : ContextualScorerBase<BearContext>
{
	[ApexSerialization]
	public Facts Fact;

	[ApexSerialization]
	public byte Value;

	public override float Score(BearContext c)
	{
		return (c.GetWorldState(Fact) <= Value) ? 0f : score;
	}
}
