using Apex.AI;
using Apex.Serialization;

public class NPCTurretHasWorldState : ContextualScorerBase<NPCTurretContext>
{
	[ApexSerialization]
	public Facts Fact;

	[ApexSerialization]
	public byte Value;

	public override float Score(NPCTurretContext c)
	{
		if (c.GetWorldState(Fact) != Value)
		{
			return 0f;
		}
		return score;
	}
}
