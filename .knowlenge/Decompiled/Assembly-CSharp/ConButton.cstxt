using UnityEngine;

public class ConButton : ConsoleSystem.IConsoleCommand
{
	private int frame;

	public bool IsDown { get; set; }

	public bool JustPressed => IsDown && frame == Time.frameCount;

	public bool JustReleased => !IsDown && frame == Time.frameCount;

	public void Call(ConsoleSystem.Arg arg)
	{
		IsDown = arg.GetBool(0);
		frame = Time.frameCount;
	}
}
