using Apex.AI;
using Apex.Serialization;

public class MurdererHasWorldStateLessThan : ContextualScorerBase<MurdererContext>
{
	[ApexSerialization]
	public Facts Fact;

	[ApexSerialization]
	public byte Value;

	public override float Score(MurdererContext c)
	{
		return (c.GetWorldState(Fact) >= Value) ? 0f : score;
	}
}
