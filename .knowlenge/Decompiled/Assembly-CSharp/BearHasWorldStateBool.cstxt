using Apex.AI;
using Apex.Serialization;

public class BearHasWorldStateBool : ContextualScorerBase<BearContext>
{
	[ApexSerialization]
	public Facts Fact;

	[ApexSerialization]
	public bool Value;

	public override float Score(BearContext c)
	{
		byte b = (byte)(Value ? 1u : 0u);
		return (c.GetWorldState(Fact) != b) ? 0f : score;
	}
}
