using Apex.AI;
using Apex.Serialization;
using Rust.Ai;

public class BestPlayerFamily : OptionScorerBase<BasePlayer>
{
	[ApexSerialization]
	private float score = 10f;

	public override float Score(IAIContext context, BasePlayer option)
	{
		if (context is PlayerTargetContext playerTargetContext)
		{
			return (option.Family == playerTargetContext.Self.GetStats.Family) ? 0f : score;
		}
		return 0f;
	}
}
