using Apex.AI;
using Apex.Serialization;

public class MurdererHasWorldStateBool : ContextualScorerBase<MurdererContext>
{
	[ApexSerialization]
	public Facts Fact;

	[ApexSerialization]
	public bool Value;

	public override float Score(MurdererContext c)
	{
		byte b = (byte)(Value ? 1u : 0u);
		if (c.GetWorldState(Fact) != b)
		{
			return 0f;
		}
		return score;
	}
}
