[Factory("lerp")]
public class lerp : ConsoleSystem
{
	[ClientVar(Help = "Enables interpolation on network positions")]
	public static bool enabled = true;

	[ClientVar(Help = "The higher this value the more post process smoothing applied. 0 = accurate, 1 = smooth")]
	public static float smoothing = 0.15f;

	[ClientVar(Help = "How many seconds behind to lerp. 0 is the most accurate but can be the most jittery")]
	public static float time = 0.1f;
}
