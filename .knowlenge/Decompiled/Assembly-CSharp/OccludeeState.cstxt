using UnityEngine;

public class OccludeeState : OcclusionCulling.SmartListValue
{
	public OcclusionCulling.Cell cell;

	public OcclusionCulling.BufferSet set;

	public int slot;

	public Vector4 sphereBounds;

	public bool isVisible;

	public float minTimeVisible;

	public float timeVisible;

	public OcclusionCulling.OnVisibilityChanged onVisibilityChanged;

	public OccludeeState Initialize(OcclusionCulling.BufferSet set, int slot, Vector4 sphereBounds, bool isVisible, float minTimeVisible, OcclusionCulling.OnVisibilityChanged onVisibilityChanged)
	{
		cell = null;
		this.set = set;
		this.slot = slot;
		this.sphereBounds = sphereBounds;
		this.isVisible = isVisible;
		this.minTimeVisible = minTimeVisible;
		timeVisible = 0f;
		this.onVisibilityChanged = onVisibilityChanged;
		return this;
	}

	public void MakeVisible()
	{
		isVisible = true;
		timeVisible = minTimeVisible;
		if (onVisibilityChanged != null)
		{
			onVisibilityChanged(visible: true);
		}
	}
}
