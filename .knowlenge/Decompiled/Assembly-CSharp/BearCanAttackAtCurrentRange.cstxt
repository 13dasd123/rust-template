using Apex.AI;

public class BearCanAttackAtCurrentRange : ContextualScorerBase<BearContext>
{
	public override float Score(BearContext c)
	{
		if (!Try(c))
		{
			return 0f;
		}
		return score;
	}

	public static bool Try(BearContext c)
	{
		if (c.GetFact(Facts.EnemyRange) == 0)
		{
			return true;
		}
		return false;
	}
}
