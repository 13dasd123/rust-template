using UnityEngine;
using UnityEngine.UI;

public class ItemTextValue : MonoBehaviour
{
	public Text text;

	public Color bad;

	public Color good;

	public bool negativestat;

	public void SetValue(float val, int numDecimals, string overrideText = "")
	{
		text.text = ((!(overrideText == string.Empty)) ? overrideText : string.Format("{0}{1:n" + numDecimals + "}", (!(val > 0f)) ? string.Empty : "+", val));
		bool flag = val > 0f;
		if (negativestat)
		{
			flag = !flag;
		}
		text.color = ((!flag) ? bad : good);
	}
}
