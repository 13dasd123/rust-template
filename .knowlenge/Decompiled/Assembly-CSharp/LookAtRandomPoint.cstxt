using Apex.Serialization;
using Rust.Ai;
using UnityEngine;

public class LookAtRandomPoint : BaseAction
{
	[ApexSerialization]
	public float MinTimeout = 5f;

	[ApexSerialization]
	public float MaxTimeout = 20f;

	public override void DoExecute(BaseContext context)
	{
		if (context is NPCHumanContext nPCHumanContext)
		{
			nPCHumanContext.Human.LookAtRandomPoint(Random.Range(MinTimeout, MaxTimeout));
		}
	}
}
