using Steamworks;
using TMPro;
using UnityEngine;

public class ItemStoreCartItem : MonoBehaviour
{
	public int Index;

	public TextMeshProUGUI Name;

	public TextMeshProUGUI Price;

	public void Init(int index, InventoryDef def)
	{
		Index = index;
		Name.text = def.Name;
		Price.text = def.LocalPriceFormatted;
	}

	public void RemoveFromCart()
	{
		SingletonComponent<ItemStore>.Instance.RemoveFromCart(Index);
	}
}
