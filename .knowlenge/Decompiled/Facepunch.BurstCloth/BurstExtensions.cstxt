using Unity.Collections;
using Unity.Collections.LowLevel.Unsafe;

internal static class BurstExtensions
{
	public unsafe static ref readonly T GetReadonly<T>(this NativeArray<T> array, int index) where T : unmanaged
	{
		T* unsafeReadOnlyPtr = (T*)array.GetUnsafeReadOnlyPtr();
		return ref unsafeReadOnlyPtr[index];
	}

	public unsafe static ref T Get<T>(this NativeArray<T> array, int index) where T : unmanaged
	{
		T* unsafePtr = (T*)array.GetUnsafePtr();
		return ref unsafePtr[index];
	}
}
