using UnityEngine;

public static class GameObjectExtensions
{
	public static void SetIgnoreCollisions(this GameObject self, GameObject other, bool ignore)
	{
		Collider[] componentsInChildren = self.GetComponentsInChildren<Collider>(includeInactive: true);
		Collider[] componentsInChildren2 = other.GetComponentsInChildren<Collider>(includeInactive: true);
		Collider[] array = componentsInChildren;
		foreach (Collider collider in array)
		{
			Collider[] array2 = componentsInChildren2;
			foreach (Collider collider2 in array2)
			{
				Physics.IgnoreCollision(collider, collider2, ignore);
			}
		}
	}
}
