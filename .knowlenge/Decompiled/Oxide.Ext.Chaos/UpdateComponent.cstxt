using Oxide.Ext.Chaos.UIFramework;

public class UpdateComponent<T> where T : BaseCuiComponent, IPoolable
{
	public string Name;

	public T Component;

	public void OnEnterPool()
	{
		Name = string.Empty;
		UIComponentPool.Free(ref Component);
	}

	public void OnLeavePool()
	{
		Component = UIComponentPool.Get<T>();
	}

	public void Send(BasePlayer player)
	{
		ChaosUI.SendUpdate(player, this);
	}
}
