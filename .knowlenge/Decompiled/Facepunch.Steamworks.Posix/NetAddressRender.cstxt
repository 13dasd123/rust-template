using System;
using System.Runtime.InteropServices;
using System.Text;
using Steamworks;
using Steamworks.Data;

[StructLayout(LayoutKind.Sequential, Pack = 4)]
internal struct NetAddressRender
{
	[MarshalAs(UnmanagedType.ByValArray, SizeConst = 48)]
	internal byte[] Buf;

	[DllImport("libsteam_api", CallingConvention = CallingConvention.Cdecl, EntryPoint = "SteamAPI_SteamNetworkingIPAddrRender_c_str")]
	internal static extern Utf8StringPointer Internalc_str(ref NetAddressRender self);

	internal string BufUTF8()
	{
		return Encoding.UTF8.GetString(Buf, 0, Array.IndexOf(Buf, (byte)0));
	}
}
