using Oxide.Core.Libraries;

public class Server : Library
{
	public void Broadcast(string message, string prefix = null, ulong userId = 0uL)
	{
		ConsoleNetwork.BroadcastToAllClients("chat.add", userId, (prefix != null) ? $"{prefix} {message}" : message, 1.0);
	}

	public void Broadcast(string message, string prefix = null, ulong userId = 0uL, params object[] args)
	{
		Broadcast(string.Format(message, args), prefix, userId);
	}

	public void Command(string command, params object[] args)
	{
		ConsoleSystem.Run(ConsoleSystem.Option.Server, command, args);
	}
}
