using Steamworks;

public struct Socket
{
	internal uint Id;

	public SocketInterface Interface
	{
		get
		{
			return SteamNetworkingSockets.GetSocketInterface(Id);
		}
		set
		{
			SteamNetworkingSockets.SetSocketInterface(Id, value);
		}
	}

	public override string ToString()
	{
		return Id.ToString();
	}

	public bool Close()
	{
		return SteamNetworkingSockets.Internal.CloseListenSocket(this);
	}
}
