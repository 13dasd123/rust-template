[StructLayout(LayoutKind.Sequential, Pack = 8)]
internal struct HTTPRequestCompleted_t
{
	[StructLayout(LayoutKind.Sequential, Pack = 4)]
	internal struct PackSmall
	{
		public uint Request;

		public ulong ContextValue;

		[MarshalAs(UnmanagedType.I1)]
		public bool RequestSuccessful;

		public HTTPStatusCode StatusCode;

		public uint BodySize;

		public static implicit operator HTTPRequestCompleted_t(PackSmall d)
		{
			HTTPRequestCompleted_t result = default(HTTPRequestCompleted_t);
			result.Request = d.Request;
			result.ContextValue = d.ContextValue;
			result.RequestSuccessful = d.RequestSuccessful;
			result.StatusCode = d.StatusCode;
			result.BodySize = d.BodySize;
			return result;
		}
