using Oxide.Ext.Discord.Exceptions;

public class InvalidGuildMemberException : BaseDiscordException
{
	private InvalidGuildMemberException(string message)
		: base(message)
	{
	}

	internal static void ThrowIfInvalidNickname(string nickname)
	{
		if (!string.IsNullOrEmpty(nickname) && nickname.Length > 32)
		{
			throw new InvalidGuildMemberException(string.Format("{0}.{1} cannot be more than {2} characters", "GuildMemberUpdate", "Nick", 32));
		}
	}
}
