using System.Collections.Generic;
using Oxide.Ext.Discord.Data;
using Oxide.Ext.Discord.Entities;
using ProtoBuf;

[ProtoContract]
internal sealed class DiscordUserData : BaseDataFile<DiscordUserData>
{
	[ProtoMember(1)]
	private Dictionary<Snowflake, BotData> _bots = new Dictionary<Snowflake, BotData>();

	public bool TryGetBotData(Snowflake id, out BotData data)
	{
		return _bots.TryGetValue(id, out data);
	}

	public BotData GetBotData(Snowflake botId)
	{
		if (!_bots.TryGetValue(botId, out var value))
		{
			value = new BotData();
			_bots[botId] = value;
			OnDataChanged();
		}
		return value;
	}
}
