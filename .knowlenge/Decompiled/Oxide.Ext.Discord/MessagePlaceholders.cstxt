using Oxide.Core.Plugins;
using Oxide.Ext.Discord.Entities;
using Oxide.Ext.Discord.Libraries;
using Oxide.Ext.Discord.Plugins;

public static class MessagePlaceholders
{
	public static Snowflake Id(PlaceholderState state, DiscordMessage message)
	{
		return message.Id;
	}

	public static Snowflake ChannelId(PlaceholderState state, DiscordMessage message)
	{
		return message.ChannelId;
	}

	public static string Content(PlaceholderState state, DiscordMessage message)
	{
		return message.Content;
	}

	internal static void RegisterPlaceholders()
	{
		RegisterPlaceholders(DiscordExtensionCore.Instance, DefaultKeys.Message, new PlaceholderDataKey("DiscordMessage"));
	}

	public static void RegisterPlaceholders(Plugin plugin, MessageKeys keys, PlaceholderDataKey dataKey)
	{
		DiscordPlaceholders instance = BaseDiscordLibrary<DiscordPlaceholders>.Instance;
		instance.RegisterPlaceholder<DiscordMessage, Snowflake>(plugin, keys.Id, dataKey, Id);
		instance.RegisterPlaceholder<DiscordMessage, Snowflake>(plugin, keys.ChannelId, dataKey, ChannelId);
		instance.RegisterPlaceholder<DiscordMessage, string>(plugin, keys.Content, dataKey, Content);
	}
}
