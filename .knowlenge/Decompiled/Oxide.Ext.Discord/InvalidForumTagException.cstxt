using Oxide.Ext.Discord.Exceptions;

public class InvalidForumTagException : BaseDiscordException
{
	private InvalidForumTagException(string message)
		: base(message)
	{
	}

	internal static void ThrowIfInvalidName(string name)
	{
		if (!string.IsNullOrEmpty(name) && name.Length > 20)
		{
			throw new InvalidForumTagException(string.Format("{0}.{1} cannot be more than {2} characters", "ForumTag", "Name", 20));
		}
	}
}
