using System.Collections.Generic;
using Oxide.Ext.Discord.Data;
using Oxide.Ext.Discord.Entities;
using ProtoBuf;

[ProtoContract]
internal class BotData
{
	[ProtoMember(1)]
	public Dictionary<Snowflake, UserData> Users { get; set; } = new Dictionary<Snowflake, UserData>();

	public UserData GetUserData(Snowflake userId)
	{
		if (!Users.TryGetValue(userId, out var value))
		{
			value = new UserData(userId);
			Users[userId] = value;
			BaseDataFile<DiscordUserData>.Instance.OnDataChanged();
		}
		return value;
	}
}
