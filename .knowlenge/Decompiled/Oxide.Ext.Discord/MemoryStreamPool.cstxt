using System.IO;
using Oxide.Ext.Discord.Types;

internal class MemoryStreamPool : BasePool<MemoryStream, MemoryStreamPool>
{
	protected override PoolSize GetPoolSize(PoolSettings settings)
	{
		return settings.MemoryStreamPoolSize;
	}

	protected override MemoryStream CreateNew()
	{
		return new MemoryStream();
	}

	protected override bool OnFreeItem(ref MemoryStream item)
	{
		item.SetLength(0L);
		return true;
	}
}
