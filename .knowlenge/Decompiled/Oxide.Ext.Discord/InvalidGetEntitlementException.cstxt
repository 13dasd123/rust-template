using Oxide.Ext.Discord.Exceptions;

public class InvalidGetEntitlementException : BaseDiscordException
{
	private InvalidGetEntitlementException(string message)
		: base(message)
	{
	}

	internal static void ThrowIfInvalidLimit(int? limit)
	{
		if (limit < 1)
		{
			throw new InvalidGetEntitlementException($"Limit cannot be less than {1}");
		}
		if (limit > 100)
		{
			throw new InvalidGetEntitlementException($"Limit cannot be more than {100}");
		}
	}
}
