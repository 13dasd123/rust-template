using Oxide.Core.Plugins;
using Oxide.Ext.Discord.Entities;
using Oxide.Ext.Discord.Libraries;
using Oxide.Ext.Discord.Plugins;

public static class RolePlaceholders
{
	public static Snowflake Id(DiscordRole role)
	{
		return role.Id;
	}

	public static string Name(DiscordRole role)
	{
		return role.Name;
	}

	public static string Mention(DiscordRole role)
	{
		return role.Mention;
	}

	public static string Icon(DiscordRole role)
	{
		return role.Icon;
	}

	internal static void RegisterPlaceholders()
	{
		RegisterPlaceholders(DiscordExtensionCore.Instance, DefaultKeys.Role, new PlaceholderDataKey("DiscordRole"));
	}

	public static void RegisterPlaceholders(Plugin plugin, RoleKeys keys, PlaceholderDataKey dataKey)
	{
		DiscordPlaceholders instance = BaseDiscordLibrary<DiscordPlaceholders>.Instance;
		instance.RegisterPlaceholder<DiscordRole, Snowflake>(plugin, keys.Id, dataKey, Id);
		instance.RegisterPlaceholder<DiscordRole, string>(plugin, keys.Name, dataKey, Name);
		instance.RegisterPlaceholder<DiscordRole, string>(plugin, keys.Mention, dataKey, Mention);
		instance.RegisterPlaceholder<DiscordRole, string>(plugin, keys.Icon, dataKey, Icon);
	}
}
