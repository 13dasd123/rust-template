using Oxide.Ext.Discord.Entities;
using Oxide.Ext.Discord.Libraries;

public static class ServerFormatting
{
	public static string Color(this string text, DiscordColor color)
	{
		return "[" + color.ToHex() + "]" + text + "[/#]";
	}

	public static string Color(this PlaceholderKey key, DiscordColor color)
	{
		return "[" + color.ToHex() + "]" + key.ToString() + "[/#]";
	}

	public static string Bold(this string text)
	{
		return "[b]" + text + "[/b]";
	}

	public static string Italic(this string text)
	{
		return "[i]" + text + "[/i]";
	}

	public static string Size(this string text, int size)
	{
		return $"[+{size}]{text}[/+]";
	}
}
