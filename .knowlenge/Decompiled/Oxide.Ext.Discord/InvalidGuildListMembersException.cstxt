using Oxide.Ext.Discord.Exceptions;

public class InvalidGuildListMembersException : BaseDiscordException
{
	private InvalidGuildListMembersException(string message)
		: base(message)
	{
	}

	internal static void ThrowIfInvalidLimit(int? limit)
	{
		if (limit < 0)
		{
			throw new InvalidGuildListMembersException(string.Format("{0}.{1} cannot be less than {2}", "GuildListMembers", "Limit", 0));
		}
		if (limit > 1000)
		{
			throw new InvalidGuildListMembersException(string.Format("{0}.{1} cannot be more than {2}", "GuildListMembers", "Limit", 1000));
		}
	}
}
