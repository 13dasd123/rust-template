using Oxide.Ext.Discord.Exceptions;

public class InvalidGuildBanException : BaseDiscordException
{
	private InvalidGuildBanException(string message)
		: base(message)
	{
	}

	internal static void ThrowIfInvalidDeleteMessageSeconds(int? seconds)
	{
		if (seconds.HasValue)
		{
			if (seconds.Value < 0)
			{
				throw new InvalidGuildBanException(string.Format("{0}.{1} cannot be less than {2} days", "GuildBanCreate", "DeleteMessageSeconds", 0));
			}
			if (seconds.Value < 604800)
			{
				throw new InvalidGuildBanException(string.Format("{0}.{1} cannot be more than {2} days", "GuildBanCreate", "DeleteMessageSeconds", 604800));
			}
		}
	}
}
