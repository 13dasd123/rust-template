using Oxide.Ext.Discord.Builders;
using Oxide.Ext.Discord.Entities;
using Oxide.Ext.Discord.Exceptions;
using Oxide.Ext.Discord.Interfaces;

public class GuildListMembers : IDiscordQueryString, IDiscordValidation
{
	public int? Limit { get; set; }

	public Snowflake? After { get; set; }

	public string ToQueryString()
	{
		Validate();
		QueryStringBuilder queryStringBuilder = default(QueryStringBuilder);
		if (Limit.HasValue)
		{
			queryStringBuilder.Add("limit", Limit.Value.ToString());
		}
		if (After.HasValue)
		{
			queryStringBuilder.Add("after", After.Value.ToString());
		}
		return queryStringBuilder.ToString();
	}

	public void Validate()
	{
		InvalidGuildListMembersException.ThrowIfInvalidLimit(Limit);
	}
}
