using Oxide.Core.Plugins;
using Oxide.Ext.Discord.Entities;
using Oxide.Ext.Discord.Libraries;
using Oxide.Ext.Discord.Plugins;

public static class ChannelPlaceholders
{
	public static Snowflake Id(DiscordChannel channel)
	{
		return channel.Id;
	}

	public static string Name(DiscordChannel channel)
	{
		return channel.Name;
	}

	public static string Icon(DiscordChannel channel)
	{
		return channel.IconUrl;
	}

	public static string Topic(DiscordChannel channel)
	{
		return channel.Topic;
	}

	public static string Mention(DiscordChannel channel)
	{
		return channel.Mention;
	}

	internal static void RegisterPlaceholders()
	{
		RegisterPlaceholders(DiscordExtensionCore.Instance, DefaultKeys.Channel, new PlaceholderDataKey("DiscordChannel"));
	}

	public static void RegisterPlaceholders(Plugin plugin, ChannelKeys keys, PlaceholderDataKey dataKey)
	{
		DiscordPlaceholders instance = BaseDiscordLibrary<DiscordPlaceholders>.Instance;
		instance.RegisterPlaceholder<DiscordChannel, Snowflake>(plugin, keys.Id, dataKey, Id);
		instance.RegisterPlaceholder<DiscordChannel, string>(plugin, keys.Name, dataKey, Name);
		instance.RegisterPlaceholder<DiscordChannel, string>(plugin, keys.Icon, dataKey, Icon);
		instance.RegisterPlaceholder<DiscordChannel, string>(plugin, keys.Topic, dataKey, Topic);
		instance.RegisterPlaceholder<DiscordChannel, string>(plugin, keys.Mention, dataKey, Mention);
	}
}
