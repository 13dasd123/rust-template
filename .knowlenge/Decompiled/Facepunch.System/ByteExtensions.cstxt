public static class ByteExtensions
{
	public unsafe static float ReadFloat(this byte[] buffer, int iOffset = 0)
	{
		fixed (byte* ptr = &buffer[iOffset])
		{
			return *(float*)ptr;
		}
	}

	public unsafe static void WriteFloat(this byte[] buffer, float f, int iOffset = 0)
	{
		byte* ptr = (byte*)(&f);
		buffer[iOffset] = *ptr;
		buffer[iOffset + 1] = ptr[1];
		buffer[iOffset + 2] = ptr[2];
		buffer[iOffset + 3] = ptr[3];
	}
}
