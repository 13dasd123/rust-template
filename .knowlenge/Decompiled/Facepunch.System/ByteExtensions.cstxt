public static class ByteExtensions
{
	public unsafe static T ReadUnsafe<T>(this byte[] buffer, int iOffset = 0) where T : unmanaged
	{
		fixed (byte* ptr = buffer)
		{
			return *(T*)(ptr + iOffset);
		}
	}

	public unsafe static void WriteUnsafe<T>(this byte[] buffer, T value, int iOffset = 0) where T : unmanaged
	{
		fixed (byte* ptr = buffer)
		{
			*(T*)(ptr + iOffset) = value;
		}
	}
}
